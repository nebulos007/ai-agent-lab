            "justMyCode": true
        },
        {
            "name": "Python: Debug with Arguments",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": []
        }
    ]
}
